@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row  shadow rounded">
        <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
            <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner h-100">
                    <div class="carousel-item h-100 active">
                        <img src="images\carousellmages\banner1.jpg" class="d-block w-100 h-100" alt="Recipes">
                    </div>
                    <div class="carousel-item h-100">
                        <img src="images\carousellmages\banner5.jpg" class="d-block w-100  h-100" alt="Recipes">
                    </div>
                    <div class="carousel-item h-100">
                        <img src="images\carousellmages\banner2.jpg" class="d-block w-100 h-100" alt="Recipes">
                    </div>
                    <div class="carousel-item h-100">
                        <img src="images\carousellmages\banner4.jpg" class="d-block w-100 h-100" alt="Recipes">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
            <div class="mb-1">
                <h2>
                    Get The Best <span class="text-success fst-italic">Food</span> From
                    <span class="text-success fst-italic">The Best Restaurants.</span>
                </h2>
            </div>
            <div class="mb-1 p-3">
                <span><i class="fa-solid fa-seedling text-success mx-2 fs-4"></i></span>
                <span class="fs-5 text-dark fst-italic">Fresh Food</span>
            </div>
            <div class="mb-1 p-3">
                <span><i class="fa-solid fa-wheat-awn text-success mx-2 fs-4"></i></span>
                <span class="fs-5 text-dark fst-italic">Healthy Meal</span>
            </div>
            <div class="mb-1 p-3">
                <span><i class="fa-solid fa-truck-fast text-success mx-2 fs-4"></i></span>
                <span class="fs-5 text-dark fst-italic">Fastest Delivery</span>
                <p class="py-2">We assure Deliver Order within 30 Min</p>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12 mb-3">
            <h2 class="text-dark fst-italic">Today's Special</h2>
            <div id="todaySpecial" class="row">
                <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <div class="card dishCard">
                        <img class="card-img-top h-75" src="http://forkify-api.herokuapp.com/images/BBQChickenPizzawithCauliflowerCrust5004699695624ce.jpg" alt="Dish" />
                        <div class="card-body">
                            <p class="card-tittle fw-bold">Pizza</p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <div class="card dishCard">
                        <img class="card-img-top h-75" src="https://www.hersheys.com/content/dam/hersheyland/en-us/recipes/recipe-images/43_Hersheys_Especially-Dark-Chocolate-Cake-Slice_11-18.jpeg" alt="Dish" />
                        <div class="card-body">
                            <p class="card-tittle fw-bold">Dark Chocolate Cake</p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <div class="card dishCard">
                        <img class="card-img-top h-75" src="https://food.fnr.sndimg.com/content/dam/images/food/fullset/2020/04/06/FNK_Chocolate-Mousse_H_v2_4x3.jpg.rend.hgtvcom.616.462.suffix/1586200107816.jpeg" alt="Dish" />
                        <div class="card-body">
                            <p class="card-tittle fw-bold">Chocolate Cup Cake</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>